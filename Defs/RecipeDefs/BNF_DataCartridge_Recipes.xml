		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<products>
			<BNF_DataCartridge_Blank>1</BNF_DataCartridge_Blank>
		</products>
		<workTableEfficiencyStat>WorkTableEfficiencyFactor</workTableEfficiencyStat>
		<workTableSpeedStat>WorkTableWorkSpeedFactor</workTableSpeedStat>
		<recipeUsers>
			<li>TableMachining</li>
			<li>FabricationBench</li>
		</recipeUsers>
	</RecipeDef>

