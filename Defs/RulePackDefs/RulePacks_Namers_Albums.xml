  <!-- Primary album title maker used by RR_AlbumBase -->
  <RulePackDef>
    <defName>ArtDescription_BookArtName</defName>
    <include>
      <li>RR_GlobalAlbumHelpers</li>
    </include>
    <rulePack>
      <rulesStrings>
        <!-- Simple patterns -->
        <li>r_art_name->[AlbumAdjectives] [AlbumNouns]</li>
        <li>r_art_name->The [AlbumNouns]</li>
        <li>r_art_name->[AlbumNouns] of [AlbumPlaces]</li>
        <li>r_art_name->Songs for a [AlbumPeople]</li>
        <li>r_art_name->Songs from [AlbumPlaces]</li>
        <li>r_art_name->[AlbumAdjectives] Songs for [AlbumPlaces]</li>
        <li>r_art_name->[AlbumFormats] of [AlbumNouns]</li>
        <!-- Slightly richer -->
        <li>r_art_name->Ballads of the [AlbumAdjectives] [AlbumPeople]</li>
        <li>r_art_name->Nocturnes of [AlbumPlaces]</li>
        <li>r_art_name->Etudes in [AlbumNouns]</li>
        <li>r_art_name->Studies for [AlbumPlaces]</li>
        <li>r_art_name->Dispatches from [AlbumPlaces]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
