        <li>art_name->[title_root]</li>
        <li>r_art_name->[title_root]</li>

        <!-- Mix compositional vs fixed -->
        <li>title_root->[genre_prefix] [title_noun]</li>
        <li>title_root->[title_fixed]</li>
        <li>title_root->[title_series]</li>
        <li>title_root->[title_place_form]</li>
        <li>title_root->[title_time_form]</li>
        <li>title_root->[verb_title] at [toponym]</li>
        <li>title_root->[collection_word] from [toponym]</li>
        <li>title_root->[descriptor] [room_word]</li>
        <li>title_root->[gear_word] and [material_word]</li>
        <li>title_root->[season_word] [title_noun]</li>
        <li>title_root->[work_word] Songs</li>
        <li>title_root->[color_word] [signal_word]</li>
        <li>title_root->[weather_word] Over [toponym]</li>
        <li>title_root->[verb_title] In The [room_word]</li>
        <li>title_root->[genre_prefix] [signal_word]</li>

