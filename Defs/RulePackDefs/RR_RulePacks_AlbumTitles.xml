        <li>title_series->[series_word] {num}</li>
        <li>title_series->[series_word]: [mini_theme]</li>

        <!-- Place/time molds -->
        <li>title_place_form->[verb_title] at [site_word] [place_core]</li>
        <li>title_place_form->[title_noun] of [toponym]</li>
        <li>title_time_form->[descriptor] [time_word]</li>

