        <li>bnf_title_form->[bnf_adj] [bnf_noun] [bnf_roman]</li>
        <li>bnf_title_form->[bnf_noun] [bnf_roman]</li>
        <li>bnf_title_form->[bnf_noun]: [bnf_subtitle]</li>
        <li>bnf_title_form->[bnf_place] [bnf_noun]</li>
        <li>bnf_title_form->[bnf_time] [bnf_noun]</li>
        <li>bnf_title_form->[bnf_adj] [bnf_place] [bnf_noun]</li>
        <li>bnf_title_form->[bnf_color] [bnf_noun]</li>
        <li>bnf_title_form->[bnf_noun] of [bnf_place]</li>
        <li>bnf_title_form->[bnf_noun] of [bnf_concept]</li>
        <li>bnf_title_form>[bnf_two_word_combo]</li>

