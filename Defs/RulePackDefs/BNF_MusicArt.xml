<Defs>

  <!-- NAME MAKER -->
  <RulePackDef>
    <defName>BNF_MusicArtName</defName>
    <label>BNF music art name</label>
    <rulePack>
      <rulesStrings>
        <!-- ROOT -->
        <li>r_art_name->[bnf_title_form]</li>

        <!-- Forms (keep them simple/robust first) -->
        <li>bnf_title_form->[bnf_two_word_combo]</li>
        <li>bnf_title_form->[bnf_two_word_combo_alt]</li>
        <li>bnf_title_form->[bnf_of_form]</li>
        <li>bnf_title_form->[bnf_dash_form]</li>

        <!-- Form implementations -->
        <li>bnf_two_word_combo->[bnf_word_a] [bnf_word_b]</li>
        <li>bnf_two_word_combo_alt->[bnf_word_b] [bnf_word_a]</li>
        <li>bnf_of_form->[bnf_word_a] of [bnf_word_c]</li>
        <li>bnf_dash_form->[bnf_word_a] – [bnf_word_c]</li>

        <!-- Word banks (no pipes; one per li) -->
        <!-- A: adjectives / evocative modifiers -->
        <li>bnf_word_a>Dusty</li>
        <li>bnf_word_a>Warped</li>
        <li>bnf_word_a>Fluttering</li>
        <li>bnf_word_a>Electric</li>
        <li>bnf_word_a>Neon</li>
        <li>bnf_word_a>Rust</li>
        <li>bnf_word_a>Cold</li>
        <li>bnf_word_a>Amber</li>
        <li>bnf_word_a>Midnight</li>
        <li>bnf_word_a>Satellite</li>
        <li>bnf_word_a>Frontier</li>
        <li>bnf_word_a>Grainy</li>
        <li>bnf_word_a>Broken</li>
        <li>bnf_word_a>Chrome</li>
        <li>bnf_word_a>Echo</li>

        <!-- B: short nouns -->
        <li>bnf_word_b>Tape</li>
        <li>bnf_word_b>Cut</li>
        <li>bnf_word_b>Mix</li>
        <li>bnf_word_b>Session</li>
        <li>bnf_word_b>Take</li>
        <li>bnf_word_b>Reel</li>
