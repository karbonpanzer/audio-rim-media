<?xml version='1.0' encoding='utf-8'?>
<Defs>

  
  <ThingDef ParentName="ResourceBase" Name="RR_AlbumBase" Abstract="True">
    <defName>RR_Album</defName>
    <label>album</label>
    <description>A recorded music album. Colonists can listen to it for joy and genre-based mood thoughts.</description>
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <texPath>Things/Item/Album/Album</texPath>
    </graphicData>
    <statBases>
      <Mass>0.5</Mass>
      <MarketValue>60</MarketValue>
      <MaxHitPoints>45</MaxHitPoints>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <stackLimit>1</stackLimit>
    <tradeability>All</tradeability>
    <thingCategories>
      <li>VME_Albums</li>
    </thingCategories>
  </ThingDef>

  
  <ThingDef ParentName="RR_AlbumBase">
    <defName>RR_Album_Rock</defName>
    <label>rock album</label>
    <description>A rock album recorded by a colony artist. Loud, energetic, and great for morale.</description>
    <comps>
      <li Class="VanillaMusicExpanded.CompProperties_Album">
        <genre>Rock</genre>
        <listeningTicks>1600</listeningTicks>
        <joyAmountPerTick>0.0001</joyAmountPerTick>
        <thoughtOnFinish>RR_ListenedToAlbum_Pleased</thoughtOnFinish>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>RR_Album_Name_Rock</nameMaker>
        <descriptionMaker>RR_Album_Desc_Medium</descriptionMaker>
      </li>
      <li Class="CompProperties">
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  
