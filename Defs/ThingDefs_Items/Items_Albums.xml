<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ResourceBase" Name="RR_AlbumBase" Abstract="True">
    <defName>RR_Album</defName>
    <label>album</label>
    <description>A recorded music album. Colonists can listen to it for joy and genre-based mood thoughts.</description>
    <statBases>
      <Mass>0.5</Mass>
      <MarketValue>60</MarketValue>
      <MaxHitPoints>45</MaxHitPoints>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
	<tradeNeverStack>true</tradeNeverStack>	
    <useHitPoints>true</useHitPoints>
    <stackLimit>1</stackLimit>
    <tradeability>All</tradeability>
    <thingCategories>
      <li>RR_Albums</li>
    </thingCategories>
	<graphicData>
		<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		<allowFlip>true</allowFlip>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="RR_AlbumBase">
    <defName>RR_Album_Rock</defName>
    <label>rock album</label>
    <description>A rock album recorded by a colony artist. Loud, energetic, and great for morale.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>0.5</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <texPath>Things/Item/Album/rock</texPath>
    </graphicData>
    <comps>
      <li Class="RimRadio.CompProperties_Album">
        <genre>Rock</genre>
        <listeningTicks>1600</listeningTicks>
        <joyAmountPerTick>0.0001</joyAmountPerTick>
        <thoughtOnFinish>RR_ListenedToAlbum_Pleased</thoughtOnFinish>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>RR_Album_Name_Rock</nameMaker>
        <descriptionMaker>RR_Album_Desc_Medium</descriptionMaker>
      </li>
      <li Class="CompProperties">
        <compClass>CompQuality</compClass>
      </li>
	  <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>

