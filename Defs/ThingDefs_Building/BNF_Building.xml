<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>BNF_MusicRecordingConsole</defName>
		<label>music recording console</label>
		<description>A specialized console for writing recorded music onto data cartridges. Multiple monitors, faders, and patch points let colonists produce recorded works.</description>

		<thingClass>Building_WorkTable</thingClass>
		<size>(4,2)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>

		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Production/BNF_MusicRecordingConsole_S</texPath>
			<drawSize>(4,2)</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>

		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<designationCategory>Production</designationCategory>
		<uiIconScale>1.0</uiIconScale>

		<costList>
		  <Steel>160</Steel>
		  <ComponentIndustrial>6</ComponentIndustrial>
		</costList>

		<statBases>
			<WorkToBuild>2600</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Mass>40</Mass>
			<Beauty>5</Beauty>
		</statBases>

		<comps>
			<li Class="CompProperties_Power">
			  <compClass>CompPowerTrader</compClass>
			  <shortCircuitInRain>true</shortCircuitInRain> <!-- optional, but recommended if this is an electric bench -->
			  <basePowerConsumption>300</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		
		<inspectorTabs>
			<li>ITab_Bills</li>
        </inspectorTabs>

		<building>
		  <workTableNotInRoomRoleFactor>0.6</workTableNotInRoomRoleFactor>
		  <heatPerTickWhileWorking>0.00035</heatPerTickWhileWorking>
		  <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>

		<researchPrerequisites>
			<li>MicroelectronicsBasics</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>
