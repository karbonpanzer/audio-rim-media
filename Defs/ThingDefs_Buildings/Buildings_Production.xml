<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Recording Console (keeps original defName so existing WorkGivers keep functioning) -->
  <ThingDef ParentName="BenchBase">
    <defName>VME_RecordingConsole</defName>
    <label>recording console</label>
    <description>A workstation for recording music albums. Pawns can produce genre albums here using bills.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/RecordingConsole/recordingconsole</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(5,4)</drawSize>
      <damageData>
        <rect>(0,0,3,1.8)</rect>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
      <shadowData>
        <volume>(3,0.5,2)</volume>
      </shadowData>
    </graphicData>
    <size>(3,2)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <rotatable>true</rotatable>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
      <WorkTableEfficiencyFactor>1.0</WorkTableEfficiencyFactor>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Mass>20</Mass>
    </statBases>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <designationCategory>Production</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>300</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
	
  </ThingDef>

	<!-- Album Rack (storage for albums only) -->
	<ThingDef ParentName="ShelfBase">
	  <defName>VME_AlbumRack</defName>
	  <label>album rack</label>
	  <description>A compact rack for storing recorded music albums.</description>

	  <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
	
	  <drawerType>RealtimeOnly</drawerType>
	  <surfaceType>None</surfaceType>
	  <thingClass>Building_Storage</thingClass>

	  <graphicData>
		<texPath>Things/Building/AlbumRacks/AlbumRack</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>(1.2,1.0)</drawSize>
	  </graphicData>

	  <size>(1,1)</size>
	  <rotatable>false</rotatable>
	  <passability>PassThroughOnly</passability>
	  <fillPercent>0.5</fillPercent>

	  <statBases>
		<MarketValue>70</MarketValue>
		<MaxHitPoints>120</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<Mass>8</Mass>
		<WorkToBuild>500</WorkToBuild>
	  </statBases>

	  <designationCategory>Furniture</designationCategory>

	  <building>
		<maxItemsInCell>5</maxItemsInCell>
		<blueprintClass>Blueprint_StorageWithRoomHighlight</blueprintClass>
		<fixedStorageSettings>
		  <priority>Important</priority>
		  <filter>
			<categories>
			  <li>RR_Albums</li>
			</categories>
		  </filter>
		</fixedStorageSettings>
		<defaultStorageSettings>
		  <priority>Normal</priority>
		  <filter>
			<categories>
			  <li>RR_Albums</li>
			</categories>
		  </filter>
		</defaultStorageSettings>
	  </building>
	</ThingDef>

</Defs>
